{
  "name": "@pyxismedia/srv-nest",
  "description": "Content management system",
  "license": "MIT",
  "author": "Petr Juna",
  "version": "0.1.0",
  "scripts": {
    "build_BYPASS": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "precommit": "lint-staged",
    "commit": "commit",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:dev": "linkemon",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "test": "npm run lint && jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "prettier": "prettier --write 'src/**/*.ts'",
    "webpack:build": "webpack --config webpack.config.js",
    "webpack:start": "node dist/server.js"
  },
  "dependencies": {
    "@nestjs/common": "6.3.1",
    "@nestjs/core": "^6.3.1",
    "@nestjs/graphql": "^6.2.4",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.3.1",
    "@nestjs/swagger": "^3.0.2",
    "@pyxismedia/lib-model": "1.0.18",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/joi": "^14.3.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.3.12",
    "@types/node": "^10.7.1",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/supertest": "^2.0.5",
    "apollo-link-context": "^1.0.14",
    "apollo-server-express": "^2.3.3",
    "bcrypt": "^3.0.6",
    "dotenv": "^6.2.0",
    "graphql": "^14.1.1",
    "graphql-tools": "^4.0.4",
    "husky": "^2.4.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^8.2.1",
    "mongoose": "^5.6.0",
    "mongoose-intl": "https://github.com/alexsk/mongoose-intl#89a472d942c25ea1bb635366b41af1e1792e9b85",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.5.2",
    "swagger-ui-express": "^4.0.6",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "type-graphql": "^0.17.4",
    "typescript": "^3.0.1",
    "webpack-cli": "^3.3.4",
    "webpack-node-externals": "^1.7.2",
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@nestjs/testing": "^6.3.1",
    "jest": "^23.5.0",
    "linkemon": "^0.1.1",
    "nodemon": "^1.18.3",
    "prettier": "^1.18.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "tslint": "5.11.0",
    "tslint-config-prettier": "^1.18.0"
  },
  "engines": {
    "node": "10.15.3",
    "npm": "6.4.1",
    "yarn": "1.17.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test && npm build"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "{src}/**/*.ts*": [
      "prettier --write",
      "git add"
    ]
  }
}
